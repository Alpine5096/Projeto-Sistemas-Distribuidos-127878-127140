      "targets": [{
        "expr": "histogram_quantile(0.95, sum(rate(payments_request_duration_seconds_bucket[5m])) by (le))"
      }]
    },
    {
      "type": "timeseries",
      "title": "Payments – Erros/s",
      "gridPos": { "x": 0, "y": 20, "w": 6, "h": 4 },
      "targets": [{
        "expr": "sum(rate(payments_requests_total{status!~\"2..\"}[1m]))"
      }]
    },


    {
      "type": "stat",
      "title": "Notifications – Total Requests",
      "gridPos": { "x": 0, "y": 24, "w": 4, "h": 4 },
      "targets": [{ "expr": "sum(notifications_requests_total)" }]
