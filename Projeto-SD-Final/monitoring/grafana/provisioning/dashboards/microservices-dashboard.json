    {
      "type": "timeseries",
      "title": "Requests/s – Todos os Serviços",
      "gridPos": { "x": 0, "y": 30, "w": 24, "h": 6 },
      "targets": [
        { "expr": "sum(rate(api_gateway_requests_total[1m]))" },
        { "expr": "sum(rate(orders_requests_total[1m]))" },
        { "expr": "sum(rate(payments_requests_total[1m]))" },
        { "expr": "sum(rate(notifications_requests_total[1m]))" },
        { "expr": "sum(rate(metricas_requests_total[1m]))" }
      ]
    },
    {
      "type": "timeseries",
      "title": "Erros/s – Todos os Serviços",
      "gridPos": { "x": 0, "y": 36, "w": 24, "h": 6 },
      "targets": [
        { "expr": "sum(rate(api_gateway_requests_total{status!~\"2..\"}[1m]))" },
        { "expr": "sum(rate(orders_requests_total{status!~\"2..\"}[1m]))" },
        { "expr": "sum(rate(payments_requests_total{status!~\"2..\"}[1m]))" },
        { "expr": "sum(rate(notifications_requests_total{status!~\"2..\"}[1m]))" },
